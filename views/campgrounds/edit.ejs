     <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campground/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validation-form" enctype="multipart/form-data">
                <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>"required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>"required>
            </div>

            <div class="input-group mb-3">
                <label class="form-label" for="price">Campground Price</label>
               <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" name="campground[price]" value="<%=campground.price%>" aria-label="Amount (to the nearest dollar)" aria-describedby="price-label"required>
                <span class="input-group-text">.00</span>
               </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"  required> <%=campground.description%></textarea>
            </div>
             <div class="mb-3">
                <%campground.images.forEach(function(img,i){%>
                    <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail" >
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                <% }) %>
             </div>

            <div class="mb-3 custom-file">
                <label for="image" class="form-label ">Add More Images</label>
                <input class="form-control " name="image" type="file" id="image" multiple>
               
                <span class="form-label custom-file-label"></span>
                
              </div>
            <button class="btn btn-success mb-3">Update Campground</button>
            </form> 
            <a href="/campground/<%=campground._id%>" class="btn btn-primary mb-4">Back</a>
        </div>
      </div>
